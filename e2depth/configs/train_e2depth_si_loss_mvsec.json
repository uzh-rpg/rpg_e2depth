{
    "name": "e2depth_si_loss_mvsec",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "train": {
            "type": "SequenceSynchronizedFramesEventsDataset",
            "base_folder": "e2depth_dataset/mvsec_dataset_day1/train",
            "depth_folder": "depth/data",
            "flow_folder": "",
            "event_folder": "events/voxels",
            "proba_pause_when_running": 0.0,
            "proba_pause_when_paused": 0.0,
            "step_size": 2
        },
        "validation": {
            "type": "SequenceSynchronizedFramesEventsDataset",
            "base_folder": "e2depth_dataset/mvsec_dataset_day1/validation",
            "depth_folder": "depth/data",
            "flow_folder": "",
            "event_folder": "events/voxels",
            "proba_pause_when_running": 0.0,
            "proba_pause_when_paused": 0.0,
            "step_size": 1
        },
        "batch_size": 18,
        "num_workers": 4,
        "pin_memory": true,
        "normalize": true,
        "shuffle": true
    },
    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 1000,
    "lr_scheduler": {
        "gamma": 1.0
    },
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0
    },
    "loss": {
        "type": "scale_invariant_loss",
        "config": {"weight": 1.0, "n_lambda" : 0.5}
    },
    "l1_loss": {
        "weight": 1.0,
        "downsampling_factor": 0.5
    },
    "metrics": [
        "mse",
        "scale_invariant_error",
        "median_error"
    ],
    "trainer": {
        "epochs": 301,
        "sequence_length": 40,
        "save_dir": "/data/scratch/javi/e2depth_checkpoints/",
        "save_freq": 4,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min",
        "num_previews": 4,
        "num_val_previews": 4
    },
    "arch": "E2VIDRecurrent",
    "model": {
        "num_bins": 5,
        "skip_type": "sum",
        "recurrent_block_type": "convlstm",
        "num_encoders": 3,
        "base_num_channels": 32,
        "num_residual_blocks": 2,
        "use_upsample_conv": true,
        "norm": "none"
    }
}
